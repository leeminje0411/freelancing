  <!-- 카카오 지도 로직 -->
  <script>
    /************************************************************
     * 기존 폴리라인 위치 (학동역 8번 출구 → 스타벅스 코너 → 건물)
     * + 최종 목적지
     ************************************************************/
    var stationExit8    = new kakao.maps.LatLng(37.514325, 127.030614);
    var starbucksCorner = new kakao.maps.LatLng(37.514681, 127.030458);
    var buildingPosition= new kakao.maps.LatLng(37.51501, 127.03151);
    var finalPosition   = new kakao.maps.LatLng(37.5151315821327,127.03145657208145);

    // 지도 생성
    var mapCenter = new kakao.maps.LatLng(37.5145, 127.0310);
    var mapOption = {
      center: mapCenter,
      level: 3
    };
    var map = new kakao.maps.Map(document.getElementById('map'), mapOption);

    // 폴리라인 (4개 지점)
    var linePath = [
      stationExit8,
      starbucksCorner,
      buildingPosition,
      finalPosition
    ];
    var polyline = new kakao.maps.Polyline({
      path: linePath,
      strokeWeight: 3,
      strokeColor: '#FF0000',
      strokeOpacity: 1,
      strokeStyle: 'dash'
    });
    polyline.setMap(map);

    /************************************************************
     * "스튜디오 오븐" 라벨 (커스텀 오버레이)
     ************************************************************/
    var labelContent = 
      '<div style="padding:2px 6px; background:#fff; border:1px solid #999; border-radius:3px; font-size:12px; font-weight:bold;">스튜디오 오븐</div>';

    var labelOverlay = new kakao.maps.CustomOverlay({
      content: labelContent,
      position: finalPosition,
      xAnchor: 0.5,
      yAnchor: 1.3
    });
    labelOverlay.setMap(map);
  </script>
