  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- 탭 전환 JS -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const aboutSection = document.getElementById('aboutSection');
      const historySection = document.getElementById('historySection');
      const orgSection = document.getElementById('orgSection');
      const ciSection = document.getElementById('ciSection'); // 추가

      const menuItems = document.querySelectorAll('.menu-item');
      // 기존 코드 유지, ciSection 추가만

      menuItems.forEach(item => {
        item.addEventListener('click', function() {
          // 모든 탭 스타일 초기화
          menuItems.forEach(mi => mi.classList.remove('active-pill'));
          this.classList.add('active-pill');

          const target = this.getAttribute('data-section');

          // 일단 모두 숨기기
          aboutSection.style.display = 'none';
          historySection.style.display = 'none';
          orgSection.style.display = 'none';
          ciSection.style.display = 'none';

          // 해당하는 섹션만 표시
          if (target === 'ci') {
            ciSection.style.display = 'block';
          } else if (target === 'history') {
            historySection.style.display = 'block';
          } else if (target === 'org') {
            orgSection.style.display = 'block';
          } else {
            // 기본: about
            aboutSection.style.display = 'block';
          }
        });
      });
    });
  </script>
</body>
