    }
    .pretendard-light {
      font-weight: 300;
    }

    /* ----- 공통 배경 사이즈 조정용 ----- */
    .bg-cover {
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }

    /* ----- 메뉴 underline & active-pill ----- */
    .menu-item {
      position: relative;
      display: inline-block;
      text-decoration: none;
      color: #042b6e;
      transition: color 0.3s ease;
      padding: 2px 6px;
    }
    .menu-item::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 2px;
      background-color: #042b6e;
      transition: width 0.3s ease;
      transform: translateY(3px);
    }
    .menu-item:hover::after {
      width: 100%;
    }
    .active-pill {
      background-color: #042b6e; 
      color: #ffffff !important;
      border-radius: 9999px;
      padding: 0.3rem 1rem;
      position: relative;
    }
    .active-pill::after {
      display: none;
    }

    /* ----- 카드 ----- */
    .custom-card {
      /* 폭을 제한하고 가운데 정렬 */
      max-width: 220px;
      margin: 0 auto;

      /* 모서리: 좌상/우상/우하 크게, 좌하만 적게 */
      border-radius: 30px 30px 30px 10px;

      /* 그림자: 아래쪽을 좀 더 강조 */
      box-shadow: 0 4px 15px rgba(0,0,0,0.15), 
                  0 1px 5px rgba(0,0,0,0.05);

      background-color: #fff;
      border: none;
    }

    .stairs-bg-opacity {
      background: 
        linear-gradient(rgba(255,255,255,0.7), rgba(255,255,255,0.7)), 
        url('https://xjoospswraznhebpbavk.supabase.co/storage/v1/object/public/studiooven//opacity-stairs.webp');
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }

    /* 선을 좀 더 두껍게(height:3px) & margin 위로 조금 */
    .card-title-line {
      width: 70%; 
      height: 3px; 
      background-color: #042b6e;
      margin: 0.5rem auto 1rem;
    }
  </style>
