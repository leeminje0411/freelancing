<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>스튜디오 오븐</title>

  <!-- Bootstrap CSS (비차단) -->
  <link
    rel="preload"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    as="style" onload="this.rel='stylesheet'"
  >
  <noscript>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  </noscript>

  <!-- 사이트 전용 CSS -->
  <link rel="stylesheet" href="/style.css" />

  <style>
    /* Sticky footer 레이아웃 */
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
    }
    main {
      flex: 1; 
    }

    /* Archive 타이틀 (GmarketSansBold) */
    .archive-title {
      font-family: 'GmarketSansBold';
      font-size: 2.5rem; /* PC일 때 2.5rem */
      color: #042b6e;
      text-align: center;
      margin-top: 50px;
      margin-bottom: 5rem;  /* PC일 때 */
    }

    /* 탭 버튼 컨테이너 */
    .archive-tabs {
      display: flex;
      justify-content: center;
      gap: 8rem;       /* PC일 때 */
      margin-bottom: 7rem; /* PC일 때 */
    }

    /* 탭 버튼 스타일 */
    .sub-nav-btn {
      font-family: 'GmarketSansMedium';
      font-size: 1.5rem; /* PC일 때 */
      cursor: pointer;
      border: none;
      border-radius: 30px;
      padding: 8px 36px;
      margin: 0;
      background: none;
      color: #2C3E66;
      transition: all 0.3s ease;
    }
    .sub-nav-btn:hover {
      background-color: rgba(44, 62, 102, 0.07);
    }
    .sub-nav-btn.selected {
      background-color: #2C3E66;
      color: #fff;
    }

    /* 2열 이미지 */
    .image-container {
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }
    .image-container img {
      width: 100%;
      height: 400px; /* 고정 높이 (예시) */
      object-fit: cover;
      display: block;
    }

    /* 오버레이 호버 */
    .image-container .overlay {
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.4);
      opacity: 0;
      transition: opacity 0.3s ease;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #fff;
      font-family: 'GmarketSansBold';
      font-size: 1.2rem;
    }
    .image-container:hover .overlay {
      opacity: 1;
    }

    .archive-container {
      max-width: 1300px;
      margin: 0 auto;
      padding: 0 1rem 4rem;
    }

    /* ▼▼▼ 슬라이드 전환 (아래->위) ▼▼▼ */
    #archiveGrid {
      transform: translateY(0);
      opacity: 1;
      transition: transform 0.5s ease, opacity 0.5s ease;
    }
    /* 슬라이드 아웃: 아래로 50px 가면서 투명 */
    #archiveGrid.slide-out {
      transform: translateY(50px);
      opacity: 0;
    }
    /* 슬라이드 인: 원위치 + 불투명 */
    #archiveGrid.slide-in {
      transform: translateY(0);
      opacity: 1;
    }

    /* ▼▼▼ 모바일(최대 768px) ▼▼▼ */
    @media (max-width: 768px) {
      /* Archive, 탭 margin 줄이기 */
      .archive-title {
        margin-bottom: 2rem !important;
        /* 폰트 크기 반: 2.5rem -> ~1.25rem (대략) */
        font-size: 1.25rem !important;
      }
      .archive-tabs {
        gap: 3rem !important;
        margin-bottom: 3rem !important;
      }
      /* 탭 버튼 폰트도 반: 1.5rem -> ~0.75rem */
      .sub-nav-btn {
        font-size: 0.75rem !important;
      }
    }
  </style>
</head>

<body>
  <header>
    <%- include('partials/mainNavbar') %>
  </header>

  <main>
    <!-- Archive 타이틀 -->
    <h2 class="archive-title">Archive</h2>

    <!-- Projects / Modeling 탭 -->
    <div class="archive-tabs">
      <button id="projectsBtn" class="sub-nav-btn">Projects</button>
      <button id="modelingBtn" class="sub-nav-btn">Modeling</button>
    </div>

    <!-- 그리드를 담을 컨테이너 (JS에서 동적으로 채움) -->
    <div class="archive-container">
      <div id="archiveGrid"></div>
    </div>
  </main>

  <footer>
    <%- include('partials/footer') %>
  </footer>

  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      /* 서버에서 넘긴 defaultTab */
      const defaultTab = "<%= defaultTab %>"; 

      const projectsBtn = document.getElementById('projectsBtn');
      const modelingBtn = document.getElementById('modelingBtn');
      const archiveGrid = document.getElementById('archiveGrid');

      // Projects 이미지
      const projectsImages = [];
      for (let i = 1; i <= 10; i++) {
        projectsImages.push(
          `https://xjoospswraznhebpbavk.supabase.co/storage/v1/object/public/studiooven/projects/${i}.jpg`
        );
      }
      // Modeling 이미지
      const modelingImages = [];
      for (let i = 1; i <= 6; i++) {
        modelingImages.push(
          `https://xjoospswraznhebpbavk.supabase.co/storage/v1/object/public/studiooven/Modeling/${i}.png`
        );
      }

      /* 슬라이드 아웃 */
      function slideOutGrid(callback) {
        archiveGrid.classList.remove('slide-in');
        archiveGrid.classList.add('slide-out');
        archiveGrid.addEventListener('transitionend', function handleSlide() {
          archiveGrid.removeEventListener('transitionend', handleSlide);
          callback();
        }, { once: true });
      }
      /* 슬라이드 인 */
      function slideInGrid() {
        archiveGrid.classList.remove('slide-out');
        archiveGrid.classList.add('slide-in');
      }

      /* 실제 그리드 HTML 생성 */
      function renderGrid(images) {
        let html = '<div class="row row-cols-1 row-cols-md-2 g-4 archive-grid">';
        images.forEach((src, idx) => {
          html += `
            <div class="col">
              <div class="image-container">
                <img 
                  src="${src}"
                  alt="Image ${idx+1}"
                />
                <div class="overlay">
                  <p>Image ${idx+1}</p>
                </div>
              </div>
            </div>
          `;
        });
        html += '</div>';
        archiveGrid.innerHTML = html;
      }

      /* 탭 표시 */
      function showProjects() {
        projectsBtn.classList.add('selected');
        modelingBtn.classList.remove('selected');
        renderGrid(projectsImages);
      }
      function showModeling() {
        modelingBtn.classList.add('selected');
        projectsBtn.classList.remove('selected');
        renderGrid(modelingImages);
      }

      /* 초기: defaultTab에 따라 */
      if (defaultTab === 'modeling') {
        showModeling();
      } else {
        showProjects();
      }
      archiveGrid.classList.add('slide-in');

      /* 버튼 이벤트 */
      projectsBtn.addEventListener('click', function() {
        slideOutGrid(() => {
          showProjects();
          slideInGrid();
        });
      });
      modelingBtn.addEventListener('click', function() {
        slideOutGrid(() => {
          showModeling();
          slideInGrid();
        });
      });
    });
  </script>
</body>
</html>